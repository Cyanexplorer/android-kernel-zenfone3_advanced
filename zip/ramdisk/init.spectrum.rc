# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implementation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
   exec u:r:init:s0 root root -- /init.spectrum.sh
   exec u:r:su:s0 root root -- /init.spectrum.sh
   # Enable Spectrum support
   setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel "Advanced Z017"

# Balance (default profile)
on property:persist.spectrum.profile=0
    
    # CPU
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1958400
    write /sys/devices/system/cpu/cpufreq/interactive/timer_slack 80000
    write /sys/devices/system/cpu/cpufreq/interactive/timer_rate 20000
    write /sys/devices/system/cpu/cpufreq/interactive/target_loads 85 1401600:80
    write /sys/devices/system/cpu/cpufreq/interactive/min_sample_time 39000
    write /sys/devices/system/cpu/cpufreq/interactive/ignore_hispeed_on_notif 0
    write /sys/devices/system/cpu/cpufreq/interactive/hispeed_freq 1401600
    write /sys/devices/system/cpu/cpufreq/interactive/go_hispeed_load 85
    write /sys/devices/system/cpu/cpufreq/interactive/above_hispeed_delay 19000 1401600:39000
    write /sys/devices/system/cpu/cpufreq/interactive/align_windows 0
    write /sys/devices/system/cpu/cpufreq/interactive/boost 0
    write /sys/devices/system/cpu/cpufreq/interactive/boostpulse_duration 80000
    write /sys/devices/system/cpu/cpufreq/interactive/enable_prediction 0
    write /sys/devices/system/cpu/cpufreq/interactive/fast_ramp_down 0
    write /sys/devices/system/cpu/cpufreq/interactive/max_freq_hysteresis 0
    write /sys/devices/system/cpu/cpufreq/interactive/powersave_bias 0
    write /sys/devices/system/cpu/cpufreq/interactive/screen_off_maxfreq 1036800
    write /sys/devices/system/cpu/cpufreq/interactive/use_migration_notif 1
    write /sys/devices/system/cpu/cpufreq/interactive/use_sched_load 1
    
    # Hotplug
    write /sys/module/msm_hotplug/msm_enabled 1
    write /sys/module/blu_plug/parameters/enabled 0
    write /sys/kernel/thunderplug/hotplug_enabled 0
    write /sys/module/lazyplug/parameters/lazyplug_active 0
    write /sys/kernel/alucard_hotplug/hotplug_enable 0
    write /sys/module/intelli_plug/parameters/intelli_plug_active 0
    
    write /sys/module/msm_hotplug/boost_lock_duration 2500
    write /sys/module/msm_hotplug/io_is_busy 0
    write /sys/module/msm_hotplug/lock_duration 500
    write /sys/module/msm_hotplug/max_cpus_online_susp 2
    write /sys/module/msm_hotplug/update_rates 100
    write /sys/module/msm_hotplug/cpus_boosted 3
    write /sys/module/msm_hotplug/fast_lane_load 300
    write /sys/module/msm_hotplug/max_cpus_online 8
    write /sys/module/msm_hotplug/min_cpus_online 1
    write /sys/module/msm_hotplug/load_levels "0 400 0"
    write /sys/module/msm_hotplug/load_levels "1 65 0"
    write /sys/module/msm_hotplug/load_levels "2 80 50"
    write /sys/module/msm_hotplug/load_levels "3 100 70"
    write /sys/module/msm_hotplug/load_levels "4 150 100"
    write /sys/module/msm_hotplug/load_levels "5 450 250"
    write /sys/module/msm_hotplug/load_levels "6 550 400"
    write /sys/module/msm_hotplug/load_levels "7 600 450"
    write /sys/module/msm_hotplug/load_levels "8 700 600"
    
    # GPU
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    write /sys/class/kgsl/kgsl-3d0/default_pwrlevel 5
    write /sys/class/kgsl/kgsl-3d0/devfreq/min_freq 133330000
    write /sys/class/kgsl/kgsl-3d0/devfreq/max_freq 650000000
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 650000000
    write /sys/module/adreno_idler/parameters/adreno_idler_active 0

    # Storage
    write /sys/block/mmcblk0/queue/scheduler maple
    
    # Misc
    write /sys/kernel/sched/arch_power 1
    write /sys/module/msm_performance/parameters/touchboost 1

# Performance
on property:persist.spectrum.profile=1

    # CPU
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 2016000
    write /sys/devices/system/cpu/cpufreq/interactive/go_hispeed_load 
    write /sys/devices/system/cpu/cpufreq/interactive/above_hispeed_delay 0
    write /sys/devices/system/cpu/cpufreq/interactive/timer_rate 40000
    write /sys/devices/system/cpu/cpufreq/interactive/hispeed_freq 960000
    write /sys/devices/system/cpu/cpufreq/interactive/timer_slack 480000
    write /sys/devices/system/cpu/cpufreq/interactive/target_loads 80 460800:70 600000:99
    write /sys/devices/system/cpu/cpufreq/interactive/min_sample_time 50000
    write /sys/devices/system/cpu/cpufreq/interactive/boost 1
    write /sys/devices/system/cpu/cpufreq/interactive/align_windows 0
    write /sys/devices/system/cpu/cpufreq/interactive/max_freq_hysteresis 0
    
    # Hotplug
    write /sys/module/msm_hotplug/msm_enabled 0
    write /sys/module/blu_plug/parameters/enabled 0
    write /sys/kernel/thunderplug/hotplug_enabled 0
    write /sys/module/lazyplug/parameters/lazyplug_active 1
    write /sys/kernel/alucard_hotplug/hotplug_enable 0
    write /sys/module/intelli_plug/parameters/intelli_plug_active 0
    
    write /sys/module/lazyplug/parameters/nr_run_profile_sel 0  #Select lazyplug profile balanced

    # GPU
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    write /sys/class/kgsl/kgsl-3d0/default_pwrlevel 4
    write /sys/class/kgsl/kgsl-3d0/devfreq/min_freq 133000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/max_freq 650000000
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 650000000
    write /sys/module/adreno_idler/parameters/adreno_idler_active 0

    # Storage
    write /sys/block/mmcblk0/queue/scheduler bfq
    
    # Misc
    write /sys/kernel/sched/arch_power 0
    write /sys/module/msm_performance/parameters/touchboost 1

# Battery
on property:persist.spectrum.profile=2

    # CPU
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor alucard
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1689000
    
    # Hotplug
    write /sys/module/msm_hotplug/msm_enabled 0
    write /sys/module/blu_plug/parameters/enabled 0
    write /sys/kernel/thunderplug/hotplug_enabled 0
    write /sys/module/lazyplug/parameters/lazyplug_active 0
    write /sys/kernel/alucard_hotplug/hotplug_enable 1
    write /sys/module/intelli_plug/parameters/intelli_plug_active 0
    
    write /sys/kernel/alucard_hotplug/maxcoreslimit_sleep 1
    write /sys/kernel/alucard_hotplug/maxcoreslimit 4
    write /sys/kernel/alucard_hotplug/hotplug_sampling_rate 800
    write /sys/kernel/alucard_hotplug/hotplug_suspend 1

    # GPU
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    write /sys/class/kgsl/kgsl-3d0/default_pwrlevel 6
    write /sys/class/kgsl/kgsl-3d0/devfreq/min_freq 133000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/max_freq 400000000
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 400000000
    write /sys/module/adreno_idler/parameters/adreno_idler_active 0

    # Storage
    write /sys/block/mmcblk0/queue/scheduler noop
    
    # Misc
    write /sys/kernel/sched/arch_power 1
    write /sys/module/msm_performance/parameters/touchboost 0

# Gaming
on property:persist.spectrum.profile=3

    # CPU
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 2016000
    write /sys/devices/system/cpu/cpufreq/interactive/go_hispeed_load 80
    write /sys/devices/system/cpu/cpufreq/interactive/above_hispeed_delay 0
    write /sys/devices/system/cpu/cpufreq/interactive/timer_rate 40000
    write /sys/devices/system/cpu/cpufreq/interactive/hispeed_freq 960000
    write /sys/devices/system/cpu/cpufreq/interactive/timer_slack 480000
    write /sys/devices/system/cpu/cpufreq/interactive/target_loads 80 460800:70 600000:99
    write /sys/devices/system/cpu/cpufreq/interactive/min_sample_time 50000
    write /sys/devices/system/cpu/cpufreq/interactive/boost 1
    write /sys/devices/system/cpu/cpufreq/interactive/align_windows 0
    write /sys/devices/system/cpu/cpufreq/interactive/max_freq_hysteresis 0
    
    # Hotplug
    write /sys/module/msm_hotplug/msm_enabled 0
    write /sys/module/blu_plug/parameters/enabled 0
    write /sys/kernel/thunderplug/hotplug_enabled 0
    write /sys/module/lazyplug/parameters/lazyplug_active 1
    write /sys/kernel/alucard_hotplug/hotplug_enable 0
    write /sys/module/intelli_plug/parameters/intelli_plug_active 0
    
    write /sys/module/lazyplug/parameters/nr_run_profile_sel 1  #Select lazyplug profile performance

    # GPU
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor performance
    write /sys/class/kgsl/kgsl-3d0/default_pwrlevel 3
    write /sys/class/kgsl/kgsl-3d0/devfreq/min_freq 133000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/max_freq 650000000
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 650000000
    write /sys/module/adreno_idler/parameters/adreno_idler_active 0

    # Storage
    write /sys/block/mmcblk0/queue/scheduler deadline
    
    # Misc
    write /sys/kernel/sched/arch_power 0
    write /sys/module/msm_performance/parameters/touchboost 1
